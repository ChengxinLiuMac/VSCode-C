{
    "version": "2.0.0",
    "tasks": [{
        "label": "Compile", 
        "command": "gcc",   
        "args": [
            "-g",
            "${workspaceFolder}/Lab1/simlib.c",
            "${workspaceFolder}/Lab1/coe4dk4_lab_1_2020.c",
            "-I",
            "-std=c11",
            "-o",   
            "${fileDirname}/${fileBasenameNoExtension}.exe",   
            "-m64", 
            "-Wall", 
            "-static-libgcc",     
            "-fexec-charset=GBK" 
        ],        
        "type": "process", 
        "group": {
            "kind": "build",
            "isDefault": true 
        },
        "presentation": {
            "echo": true,
            "reveal": "always", 
            "focus": false,     
            "panel": "shared"   
        },
        "problemMatcher":"$gcc" 
    }]
}